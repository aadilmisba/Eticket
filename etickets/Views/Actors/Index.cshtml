@model IEnumerable<Actor>   
@{
    ViewData["Title"] = "List of Actor";
}
<div class="row">
    <div class= "col-md-8 offset - md-2">

        <table class="table"> 
            <thead> 

                <tr>
                 <th> Html.DisplayNameFor (model= > model.ProfilePictureURL)</th>
                   <th> Html.DisplayNameFor (model= > model.FullName)</th>
                    <th> Html.DisplayNameFor (model= > model.Bio)</th>
                    <th> Actions </th>
                </tr>
            </thead>
                <tbody> 
                    @foreach (var iteam in Model)
                {
                    <tr>
                    <td> class = "align-middle"> 
                        <img class="rouded-cicle" src="@iteam.ProfilePictureURL" alt="@iteam.FullName" style="max-width: 150px"/>
                    </td>
                    <td class="" "align-middle">
                    Html.DisplayFor (modeliteam = > iteam.Fullname)  
                    </td>
                        <td class="" "align-middle">
                            Html.DisplayFor (modeliteam = > iteam.Bio)
                        </td>
                        <td class="" "align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@iteam.Id"> <i class="bi bi-pencil-square"> </i> Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id ="@iteam.Id">  <i class="bi bi-eye"> </i> Details </a>  |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@iteam.Id"> <i class="bi bi-trash"> </i> Delete </a>
                           </td>
                   </tr>                        
                }
            </tbody>
                </table>
           </div>
</div>








